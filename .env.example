# Session
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your_session_secret_here

# Discord OAuth
# Get from: https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_CALLBACK_URL=https://your-domain.com/auth/discord/callback

# Site
SITE_DOMAIN=your-domain.com

# Discord Guild IDs (comma-separated)
# Users in these guilds will have isMember = true
ALLOWED_GUILD_IDS=guild_id_1,guild_id_2

# Role requirements (guildId:roleId format, comma-separated)
# Users with these roles in specified guilds will have isMember = true
ALLOWED_ROLES_IN_GUILDS=guildId1:roleId1,guildId2:roleId2

# Amazon IVS Stream URL
IVS_STREAM_URL=https://your-ivs-playback-url.m3u8
